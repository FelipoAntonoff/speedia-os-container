package componentMappings

import (
	"github.com/speedianet/os/src/domain/valueObject"
	componentForm "github.com/speedianet/os/src/presentation/ui/component/form"
)

templ MappingTypeSelectInput(id, label, bindValuePath, onClick string) {
	<div id={ id } class="flex flex-wrap space-x-3">
		for _, mappingType := range valueObject.ValidMappingTargetTypes {
			@componentForm.RadioInput(
				mappingType+"-targetType", mappingType,
				mappingType, bindValuePath, onClick,
			)
		}
	</div>
}
